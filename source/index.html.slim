      = link_to 'read my story', 'my-story', class: 'btn'

.section
  .container
    .tab
      .tab__header
        .tab__handler Events
      .tab__content
        - data.events.each do |project|
          .article.article--event.bg-center-cover style="background-image: url(#{image_path(project.image)})"
            .article__info
              .article__title data-label=project.label = project.title
              .article__excerpt = project.excerpt
            .article__link
              - if project.unavailable
                .btn.btn--disable unavailable yet
              - else
                = link_to 'details / tickets', project.link, target: '_blank', class: 'btn'

    .tab
      .tab__header
        .tab__handler Latest Articles
      .tab__content
        - data.articles.each do |article|
          .article
            .article__info
              .article__title = article.title
              .article__excerpt = article.excerpt
            .article__link
              = link_to 'read more', article.link, target: '_blank', class: 'btn'

    .tab
      .tab__header
        .tab__handler Open Source Projects
      .tab__content
        - data.open_source_projects.each do |project|
          .article
            .article__info
              .article__title
                = project.title
                iframe.article__gh src="https://ghbtns.com/github-btn.html?user=kandebonfim&repo=#{project.repo}&type=star&count=true" frameborder="0" scrolling="0" width="90px" height="20px"
              .article__excerpt = project.excerpt
            .article__link
              = link_to 'view project', project.link, target: '_blank', class: 'btn'
